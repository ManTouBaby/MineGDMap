<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_goto_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入导航界面" />

    <Button
        android:id="@+id/bt_goto_nearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入位置附近界面" />

    <Button
        android:id="@+id/bt_goto_my_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的位置" />

    <Button
        android:id="@+id/bt_goto_multi_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多点展示" />

    <Button
        android:id="@+id/bt_goto_track"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="轨迹回放" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="100dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/bt_upload_track"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="轨迹上传" />

        <Button
            android:id="@+id/bt_close_upload_track"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="结束轨迹上传" />
    </LinearLayout>
</LinearLayout>